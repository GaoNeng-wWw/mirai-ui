{
    "compilerOptions": {
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "types": [],
      "baseUrl": ".",
      "paths": {
        "@miraiui-org/vue-*": ["../packages/vue-components"],
        "@miraiui-org/theme": ["../packages/theme"]
      },
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": [
      "./**/*.ts",
      "./**/*.vue",
      ".vitepress/**/*.ts",
      ".vitepress/**/*.vue",
      ".vitepress/**/*.mts",
      "../packages/vue-components/**/*",
      "../packages/theme/**/*",
      "./docs/components/**/*.md"
    ],
    "exclude": ["__tests__"]
}
  